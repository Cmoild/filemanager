<UserControl x:Class="filemanager.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:filemanager"
             mc:Ignorable="d" d:DesignWidth="800" Height="40">

    <Grid>
        <Button Content="GoBack" x:Name="goBackButton" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Content="GoForward" x:Name="goForwardButton" HorizontalAlignment="Left" Margin="59,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" x:Name="filePathBar" Margin="126,0,0,0" TextWrapping="Wrap" Text="{Binding Line}" VerticalAlignment="Center" Width="598" Height="20"/>
        <Button Content="Search" x:Name="searchingButton" Click="searchingButton_Click" HorizontalAlignment="Left" Margin="729,0,0,0" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
